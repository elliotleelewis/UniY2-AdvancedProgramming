<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="io.elliotlewis.employeedatabase.EditEmployeeActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:padding="16dp">

		<TextView
			android:id="@+id/server_address_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:labelFor="@+id/server_address"
			android:text="@string/server_address"/>

		<EditText
			android:id="@+id/server_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/server_address_label"
			android:inputType="textUri"/>

		<TextView
			android:id="@+id/server_port_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/server_address"
			android:labelFor="@+id/server_port"
			android:text="@string/server_port"/>

		<EditText
			android:id="@+id/server_port"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/server_port_label"
			android:inputType="textUri"/>
	</RelativeLayout>
</ScrollView>